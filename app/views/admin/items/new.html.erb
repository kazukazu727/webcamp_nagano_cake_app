<h2>商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genres.all, :genre_id, :name, include_blank: "選択してください" %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>
  <h4>販売ステータス</h4>
  <%= f.select :is_active, [["販売中",0],["販売停止中",1]],{ include_blank: true, selected: 0} %>
  <%= f.submit "新規投稿" %>
<% end %>