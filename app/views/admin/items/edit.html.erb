<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h2>商品編集</h2>
    </div>
    <div class="col-md-9 col-md-offset-2">
      <%= form_with model: @item, url: admin_item_path, method: :patch, local:true do |f| %>
        <div class="form-group col-md-9 col-md-offset-2">
          <div class="form-inline">
            <label class="col-sm-3">商品画像</label>
            <%= f.attachment_field :image %>
          </div>
        </div>

    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-3">商品名</label>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-3">商品説明</label>
        <%= f.text_area :introduction %>
      </div>
    </div>

    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-3">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
      </div>
    </div>
    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-3">税抜き価格</label>
        <%= f.text_field :price %>円
      </div>
    </div>

    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-3">販売ステータス</label>
      <div class="col-lg-5">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block"} %>
      </div>
      </div>
    </div>

    <div class="d-grid gap-2 col-6 mx-auto">
      <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
    </div>
  </div>
</div>

