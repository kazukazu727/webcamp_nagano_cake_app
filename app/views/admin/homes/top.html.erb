<div class="container">
  <div class="row">
    <div="col-lg-3">
      <h3>注文履歴一覧</h3>
    </div>

    <div class="row">
    <div class="col-lg-offset-1 col-lg-10">
      <table class="table">
        <tr class="active" style="font-weight: bold">
          <td>購入日時</td>
          <td>購入者</td>
          <td>注文個数</td>
          <td>注文ステータス</td>
        </tr>
        <% @index_orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.to_s(:datetime_jp), admin_order_detail_path(order) %></td>
          <td><%= order.customer.last_name %></td>
          <td>
            <%= order_details=OrderDetail.where(order_id:order.id) %>
              <% amount=0 %>
              <% order_details.each do |order_item| %>
                <% amount+=order_item.amount %>
              <% end %>
            <%= amount %>
          </td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-12">
      <%= paginate @index_orders %>
    </div>
    </div>
  </div>
</div>