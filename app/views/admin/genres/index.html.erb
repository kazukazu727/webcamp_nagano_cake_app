<% if flash[:notice]%>
<p id="notice">
    <%=flash[:notice]%>
</p>
<%end%>

<% if @genre.errors.any? %>
  <div class="error_explanation">
    <h2><%= @genre.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<% end %>

  <div class="row">
    <div class="col-lg-4 col-offset-1">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%=form_with model: @genre, url:admin_genres_path, local:true do |f|%>
      <div class="field">
        <%= f.label :name, "ジャンル名"%>
        <%= f.text_field :name%>
      </div>
    </div>
    <div class="col-lg3 col-offset-1 text-center">
      <div class="actions">
        <%= f.submit"新規登録", class: "btn btn-success"%>
      </div>
    </div>
      <%end%>
    </div>

  <div class="row">
    <div class="col-lg-4">
      <table class="table" style="margin-top: 40px">
        <thead>
          <tr class="active">
            <th>ジャンル</th>
          </tr>
        </thead>
      <tobody>
        <%@genres.each do |genre|%>
        <tr>
          <td><%=genre.name%></td>
          <td><%=link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"%></td>
        </tr>
        <%end%>
      </tobody>
      </table>
    </div>
  </div>
</div>






