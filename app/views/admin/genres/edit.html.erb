<h2>ジャンル編集</h2>

<% if @genre.errors.any? %>
  <div class="error_explanation">
    <h2><%= @genre.errors.count %>errors prohibited this genre from being saved:</h2>
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
