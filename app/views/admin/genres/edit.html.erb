<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h3>ジャンル編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5">
      <% if @genre.errors.any? %>
      <div class="error_explanation">
        <h2><%= @genre.errors.count %>errors prohibited this genre from being saved:</h2>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <%end%>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
    <%=form_with model:@genre, url:admin_genre_path, local: true do |f|%>
    <div class="form-group col-md-9 col-md-offset-2">
      <div class="form-inline">
        <label class="col-sm-4"><%=f.label :name, "ジャンル名"%></label>
        <%=f.text_field :name%>
        <div class="actions col-lg-5">
          <%=f.submit"変更を保存", class: "btn btn-success text-center"%>
        </div>
      </div>
    </div>
    <%end%>
</div>



