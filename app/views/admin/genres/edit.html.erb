<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <% if @genre.errors.any? %>
      <div class="error_explanation">
        <h2><%= @genre.errors.count %>errors prohibited this genre from being saved:</h2>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <%end%>
        </ul>
      </div>
      <% end %>

      <%=form_with model:@genre, url:admin_genre_path, local: true do |f|%>
        <div class="field">
          <%=f.label :name, "ジャンル名"%>
          <%=f.text_field :name%>
        </div>
        <div class="actions">
          <%=f.submit"変更を保存", class: "btn btn-primary"%>
        </div>
      <%end%>
    </div>
  </div>
</div>



