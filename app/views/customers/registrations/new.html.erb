<div class="container">
  <div class="col-lg-3 col-lg-offset-3 text-center bg-primary">
    <h3>新規会員登録</h3>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table class="customer_sign_up">
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">名前</th>
        <div class="col-lg-3">
          <td><span>（姓）</span></td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
          <td class=><span>（名）</span></td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">フリガナ</th>
        <div class="col-lg-3">
          <td><span>（セイ）</span></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
          <td><span>（メイ）</span></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">メールアドレス</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">郵便番号（ハイフンなし）</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">住所</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">電話番号（ハイフンなし）</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.phone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">パスワード（6文字以上）</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3">パスワード確認用</th>
        <div class="col-lg-3">
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </div>
      </tr>
    </div>
    <div class="row">
      <tr>
        <th class="col-lg-6 col-lg-offset-3"></th>
        <div class="col-lg-2">
          <td><td>
          <%= f.submit "新規登録", class: "btn btn-success d-grid gap-2 col-12 mx-auto" %>
        </div>
      </tr>
    </div>
  </table>

  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h3>既に登録済みの方</h3>
      <span><%= link_to "こちら", new_customer_session_path %>からログインしてください。</span>
    </div>
  </div>
</div>
