<div class="container">
	<div class="row">
		<div class="col-lg-4">
		  <h3>注文履歴詳細</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8">
		  <h5>注文情報</h5>
		    <table class="table table-bordered">
			    <tr><th class="active">注文日</th><td><%= @order.created_at.to_s(:date_jp) %></td></tr>
			    <tr><th class="active">配送先</th><td>〒 <%= @order.postal_code %><%= @order.address %><%= @order.name %>　様</td></tr>
			    <tr><th class="active">支払方法</th><td><%= @order.payment_method%></td></tr>
			    <tr><th class="active">ステータス</th><td><%= @order.status %></td></tr>
		    </table>
		</div>
		<div class="col-lg-4">
		  <h5>請求情報</h5>
		    <table class="table table-bordered">
			    <tr><th class="active">商品合計</th><td><%= @order.total_payment - @order.shipping_cost %>円</td></tr>
			    <tr><th class="active">配送料</th><td><%= @order.shipping_cost %>円</td></tr>
			    <tr><th class="active">ご請求額</th><td><%= @order.total_payment %>円</td></tr>
		    </table>
	  </div>
	</div>

	<div class="row">
		<div class="col-lg-10">
			<h5>注文内容</h5>
			  <table class="table table-bordered">
			    <tr class="active">
				    <th>商品</th>
				    <th>単価（税込）</th>
				    <th>個数</th>
				    <th>小計</th>
			    </tr>
					<% @order_details.each do |order_item| %>
					  <tr>
						  <td><%= order_item.item.name %></td>
						  <td><%= order_item.item.add_tax_price %>円</td>
						  <td><%= order_item.amount %></td>
						  <td><%= order_item.item.add_tax_price * order_item.amount %>円</td>
					  </tr>
					<% end %>
			</table>
		</div>
	</div>

</div>