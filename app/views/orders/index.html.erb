<div class="container">
	<div class="row">
	  <div class="col-lg-3">
		  <h3>注文履歴一覧</h3>
	  </div>

    <table class="table table-bordered">
      <tr class="active">
	      <th>注文日</th>
	      <th>配送先</th>
	      <th>注文商品</th>
	      <th>支払金額</th>
	      <th>ステータス</th>
	      <th>注文詳細</th>
      </tr>
	    <% @orders.each do |order|%>
	    <tr>
			  <% order_details = OrderDetail.where(order_id:order.id) %>
				  <td style="line-height: 30px;"><%= order.created_at.to_s(:date_jp) %></td>
				  <td style="line-height: 30px;">〒 <%= order.address %></td>
				  <td style="line-height: 30px;"><% order_details.each do |order_item| %>
					  <%= order_item.item.name %><br>
				    <% end %>
				  </td>
				  <td style="line-height: 30px;"><%= order.total_payment %>円</td>
				  <td style="line-height: 30px;"><%= order.status %></td>
				  <td style="line-height: 30px;"><%= link_to "表示する", order_path(order),class: 'btn btn-primary' %></td>
	    </tr>
	      <% end %>
    </table>
  </div>
</div>