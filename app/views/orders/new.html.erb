<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<h3>注文情報入力</h3>
		</div>
	</div>
</div>

<div class="container">
	<%= form_with model: @order, url:orders_confirm_path , local: true do |f| %>
	<div class="row d-grid gap-2 col-12 mx-auto">
		<div class="col-lg-4">
			<div class="col-lg-5"><h4>支払方法</h4></div>
			<div class="col-xs-offset-5 col-lg-8">
				<%= f.radio_button :payment_method, :クレジットカード, class:"pull-left"%>
				<%= f.label :payment_method, :クレジットカード ,{ class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :payment_method, :銀行振込, class:"pull-left"%>
				<%= f.label :payment_method, :銀行振込, { class:"pull-left" ,style: "padding-left: 5px;"}%>
			</div>
			<div class="col-lg-5"><h4>お届け先</h4></div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :address_option, "user", class:"pull-left"%>
				<%= f.label :address, "ご自身の住所",{ class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-lg-12">
				<p>〒<%= current_customer.postal_code%> <%=current_customer.address %> <%=current_customer.name%></p>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :address_option, "mail", class:"pull-left" %>
				<%= f.label :address, "登録済住所から選択", { class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.select :address, @addresses.all.map { |m| [m.postal_code+" "+m.address+" "+m.name] },include_blank: " 登録してある配送先住所から選択" , class: "pull-left"%>
			</div>
			<div class="col-xs-offset-1 col-lg-10">
				<%= f.radio_button :address_option, "new", class:"pull-left" %>
				<%= f.label :address, "新しいお届け先", { class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="row">
					<div class="col-xs-offset-2 col-lg-4"><%= f.label :郵便番号, { class:"pull-left" ,style: "padding-left: 15px;"} %></div>
					<div class="col-xs-offset-2 col-lg-8"><%= f.text_field :newpostal_code, size: "60*20" %></div>
					<div class="col-xs-offset-2 col-lg-4"><%= f.label :住所, { class:"pull-left" ,style: "padding-left: 15px;"} %></div>
					<div class="col-xs-offset-2 col-lg-8"><%= f.text_field :newaddress, size: "60*20" %></div>
					<div class="col-xs-offset-2 col-lg-4"><%= f.label :宛名, { class:"pull-left" ,style: "padding-left: 15px;"} %></div>
					<div class="col-xs-offset-2 col-lg-8"><%= f.text_field :newname, size: "60*20" %></div>
				<%= hidden_field_tag :page, "new" %><br>
			</div>
		</div>
		</div>

		<div class="row d-grid gap-2 col-6 mx-auto">
			<div class="col-lg-8">
			<%= f.submit "確認画面へ進む", class: "btn btn-info"%>
		</div>
	</div>
	<% end %>
</div>
