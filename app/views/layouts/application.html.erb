<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <span>Nagano_Cake</span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li>
                <%=link_to "商品一覧",admin_items_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "会員一覧",admin_customers_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "注文履歴一覧",admin_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "ジャンル一覧",admin_genres_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "ログアウト",destroy_admin_session_path, method: :delete, class: "nav-link text-light"  %>
              </li>
              <%#<% elsif customer_signed_in %>
              <div><i class="fas fa-bullhorn"></i>ようこそ、<strong><%= current_customer.name %></strong>さん！</div>
              <li>
              <%#  <%= link_to "マイページ",customer_path, class: "nav-link text-light" %>
              </li>
              <li>
               <%# <%= link_to "商品一覧",customer_items_path, class: "nav-link text-light" %>
              </li>
              <li>
               <%# <%= link_to "カート",cart_items_path, class "nav-link text-light" %>
              </li>
              <li>
               <%# <%= link_to "ログアウト",destroy_customer_session_path, method: :delete, class: "nav-link text-light" %>
              </li>
              <% else %>
              <li>
                <%=link_to "About",home_about_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "商品一覧",admin_items_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "新規登録",new_admin_registration_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%=link_to "ログイン",new_admin_session_path, class: "nav-link text-light" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      <p id="notice"></p>

    <%= yield %>
  </body>
</html>
