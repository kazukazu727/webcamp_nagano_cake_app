<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1 style="font-weight: bold">商品一覧（ 全<%= @items.length %>件 ）</span></h1>
    </div>
  </div>

  <div class="row">
  <% @new_items.each do |item| %>
    <div class="col-lg-3">
    <tr>
      <td><%= attachment_image_tag item, :image,style: "width:150px; height:100px;" %></td>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= item.price %>円</td>
    </tr>
  <% end %>
    </div>
  </div>
</div>