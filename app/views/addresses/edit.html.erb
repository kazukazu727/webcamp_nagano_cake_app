<div class="container">
  <div class="container">
    <div class="col-lg-4">
	    <h4>配送先登録 / 一覧</h4>
    </div>
  </div>
</div>

<%= form_with model:@address, url: address_path, local:true do |f| %>
<div class="container">
	<div class="row">
		<div class="col-lg-3"><%= f.label :郵便番号（ハイフンなし） %></div>
		<div class="col-lg-2"><%= f.text_field :postcode, value: @address.postal_code,placeholder: "半角 / ハイフン不要", size: "40*20" %></div>
	</div>
	<div class="row">
		<div class="col-lg-3"><%= f.label :住所 %></div>
		<div class="col-lg-2"><%= f.text_field :address,class: 'address', value: @address.address, size: "60*20" %></div>
	</div>
	<div class="row">
		<div class="col-lg-3"><%= f.label :宛名 %></div>
		<div class="col-lg-2"><%= f.text_field :name, value: @address.name  %></div>
		<div class="col-lg-4 text-right">
			<%= f.hidden_field :customer_id, value: current_customer.id %>
		  <%= f.submit "変更内容を保存", class: "btn btn-success btn-md" %>
	  </div>
	</div>
<% end %>


